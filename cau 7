package Practice1;

import java.util.Scanner;

public class Ex7 {

    public static void main(String[] args) {
        Scanner cn = new Scanner(System.in);

        System.out.print("Enter a string: ");
        String s = cn.nextLine();

        String number = ""; //Tạo 1 chuỗi rỗng để lưu số vào, ghép lại thành chuỗi

        System.out.print("The numbers in the string: ");
        for (int i = 0; i < s.length(); i++) {
            char c = s.charAt(i);
            if (Character.isDigit(c)) {//Hàm này có sẵn, dùng để kiểm tra c có phải là số không
                number += c; //Nếu là số thì ghép lại thành chuỗi
            } else {
                if (!number.isEmpty()) {//Kiểm tra chuỗi number này đã chứa số hay chưa
                    System.out.print(number + " ");
                    number = ""; //Reset lại chuỗi number
                }
            }
        }

        if (!number.isEmpty()) {// Nếu chuỗi kết thúc bằng số, sẽ in ra luôn các số cuối cùng
            System.out.print(number);
        }
    }
}
